<div class="row justify-content-center">
  <div class="mt-5 col-md-5">
    <h2 class="mb-4"><i class="bi bi-person-badge-fill"></i> Entrar</h2>
    <form action="/loginUsuario" method="post" class="mt-2" id="user_login">
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input 
        name="email"
        type="email" 
        class="form-control" 
        id="email" 
        required 
        />
      </div>
      <div class="mb-3">
        <label for="senha" class="form-label">Senha</label>
        <input
          name="senha"
          type="password"
          class="form-control"
          id="senha"
          required
        />
      </div>
      <div class="mb-3 form-check">
        <input type="checkbox" class="form-check-input" id="remember_user" />
        <label class="form-check-label" for="remember_user">Lembrar-me</label>
      </div>
      <div class="d-grid gap-2">
        <button type="submit" class="btn btn-info mb-4">Enviar</button>
        <p class="text-center">
          <a
            href="/cadastro.ejs"
            class="link-info link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover"
            >Cadastre-se!</a
          >
        </p>
      </div>
    </form>
  </div>
</div>
