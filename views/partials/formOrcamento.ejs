<div class="row justify-content-center mb-5">
  <div class="mt-5 col-md-5">
    <h2 class="mb-4"><i class="bi bi-envelope-at-fill"></i> Orçamentos</h2>
    <form class="mt-2" id="teste">
      <div class="mb-3">
        <label for="user_email" class="form-label">Email</label>
        <input type="email" class="form-control" id="user_email" required />
      </div>
      <div class="mb-3">
        <label for="user_telefone" class="form-label">Telefone</label>
        <input
          type="text"
          class="form-control"
          id="user_telefone"
          maxlength="15"
          required
        />
      </div>

      <div class="mb-3">
        <label for="user_question" class="form-label">Motivo do Contato</label>
        <textarea
          class="form-control"
          id="user_question"
          rows="3"
          aria-describedby="user_question_help"
          maxlength="250"
        ></textarea>
        <div id="user_question_help" class="form-text">
          Conte-nos brevemente sobre suas necessidades.
        </div>
      </div>

      <div class="d-grid gap-2">
        <button type="submit" class="btn btn-info mb-4">Enviar</button>
      </div>
    </form>
    <section class=" alert mensagem mensagem-verde d-none " id="mensagem">
      <p>Informações Enviadas</p>
      <span class="fechar-mensagem"><i class="bi bi-x"></i></span>
  </section>
  </div>
</div>
